{
  "version": 2,

  "builds": [
    { "src": "backend/api/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],

  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "/backend/api/:match*"
    },
    {
      "source": "/:path*",
      "destination": "/public/:path*"
    }
  ]
}
